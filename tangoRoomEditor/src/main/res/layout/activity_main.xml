<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:surfaceview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shopify.posgo.PosGoActivity">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
<!--

    <org.rajawali3d.surface.RajawaliSurfaceView
        android:id="@+id/ar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        surfaceview:frameRate="60.0"
        surfaceview:isTransparent="true"
        surfaceview:renderMode="RENDER_CONTINUOUS" />
-->

    <TextView
        android:id="@+id/log_text"
        android:layout_gravity="bottom|left"
        android:textSize="24sp"
        android:typeface="monospace"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="placeholder"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/addButton"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"/>
        <Button
            android:id="@+id/deleteButton"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETE"/>
        <Button
            android:id="@+id/clearAllButton"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLEAR ALL"/>
        <Button
            android:id="@+id/doneButton"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONE"/>
    </LinearLayout>

</FrameLayout>