<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.shopify.volumizer"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.shopify.volumizer.VolumizerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.shopify.volumizer.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.shopify.volumizer.VolumizerActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>